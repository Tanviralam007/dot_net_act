@model IEnumerable<lab_2_task_assignment.Models.Review>

@{
    ViewBag.Title = "ProductReviews";
}

@Html.ActionLink("Back to Catalog", "Index", "Catalog")

<h2>ProductReviews</h2>
<p>Read what our customers have to say about our products!</p>
@foreach (var review in Model)
{
    <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
        <h3>@review.CustomerName</h3>
        <p><strong>Rating:</strong> @review.Rating/5</p>
        <p>@review.Comment</p>
    </div>
}