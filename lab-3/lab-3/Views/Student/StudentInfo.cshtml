
@{
    ViewBag.Title = "StudentInfo";
}

<h2>StudentInfo</h2>

<form action="" method="post">
    <table class="table table-borderless">
        @*-- Name Row --*@
        <tr class="mt-3">
            <td>
                <label for="Name" class="form-label">Name </label>
            </td>
            <td>
                <input id="Name"
                       name="Name"
                       type="text"
                       class="form-control"
                       value="@Model.Name"
                       placeholder="e.g., Jakir Hasan" /> <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </td> 
        </tr> 

        @*-- Username Row --*@
        <tr class="mt-3">
            <td>
                <label for="Username" class="form-label">Username </label>
            </td>
            <td>
                <input id="Username"
                       name="Username"
                       type="text"
                       class="form-control"
                       value="@Model.Username"
                       placeholder="e.g., jakirhasan008" /> <span class="text-danger">@Html.ValidationMessage("Username")</span>
            </td>
        </tr>

        @*-- Id Row -- *@
        <tr class="mt-3">
            <td>
                <label for="Id" class="form-label">Id </label>
            </td>
            <td>
                <input id="Id"
                       name="Id"
                       type="text"
                       class="form-control"
                       maxlength="10"
                       value="@Model.Id"
                       placeholder="xx-xxxxx-x" /> <span class="text-danger">@Html.ValidationMessage("Id")</span>
            </td>
        </tr>

        @*-- Email --*@
        <tr class="mt-3">
            <td>
                <label for="Email" class="form-label">Email </label>
            </td>
            <td>
                <input id="Email"
                       name="Email"
                       type="email"
                       class="form-control"
                       value="@Model.Email"
                       placeholder="e.g., xx-xxxxx-x@student.aiub.edu" /> <span class="text-danger">@Html.ValidationMessage("Email")</span>
            </td>
        </tr>

        @*-- Address --*@
        <tr class="mt-3">
            <td>
                <label for="Address" class="form-label">Address </label>
            </td>
            <td>
                <input id="Address"
                       name="Address"
                       type="text"
                       class="form-control"
                       value="@Model.Address"
                       placeholder="e.g., Dhaka, Bangldesh" /> <span class="text-danger">@Html.ValidationMessage("Address")</span>
            </td>
        </tr>

        @*-- Date of Birth --*@
        <tr class="mt-3">
            <td>
                <label for="DateOfBirth" class="form-label">Date of Birth </label>
            </td>
            <td>
                <input id="DateOfBirth"
                       name="DateOfBirth"
                       type="date"
                       value="@(Model.DateOfBirth == DateTime.MinValue ? "" : Model.DateOfBirth.ToString("yyyy-MM-dd"))"
                       class="form-control" /> <span class="text-danger">@Html.ValidationMessage("DateOfBirth")</span>
            </td>
        </tr>

        <tr>
            <td></td>
            <td>
                <button type="submit" class="btn btn-primary">
                    Register
                </button>
            </td>
        </tr>

    </table>
</form>